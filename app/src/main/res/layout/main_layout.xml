<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_foreground_rotina"
            android:layout_gravity="center_horizontal"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000"
            android:text="Escolha um curso para ingressar"
            android:textSize="25dp"/>

        <Spinner
            android:id="@+id/cursosSpinner"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textAlignment="center">

        </Spinner>

        <Button
            android:id="@+id/entrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_login"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:text="Entrar"/>

        <Button
            android:id="@+id/sairButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_login"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:text="Sair"/>


        <Button
            android:id="@+id/verTarefas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_login"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:text="Ver Tarefas"
            />




    </LinearLayout>




</RelativeLayout>