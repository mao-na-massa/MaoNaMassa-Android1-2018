<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/corpo"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background= "#000000"/>
        <Button
            android:id="@+id/cabeça"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/corpo"
            android:layout_centerHorizontal="true"
            android:background="#eeddd0"/>
        <Button
            android:id="@+id/chapeu"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_above="@+id/cabeça"
            android:layout_centerHorizontal="true"
            android:background= "#000000"/>
        <Button
            android:id="@+id/chapeu2"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_above="@+id/chapeu"
            android:layout_centerHorizontal="true"
            android:background= "#000000"/>


        <Button
            android:id="@+id/perna_esquerda"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_below="@+id/corpo"
            android:layout_alignLeft="@+id/corpo"
            android:background="#003366"/>
        <Button
            android:id="@+id/perna_direita"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_below="@+id/corpo"
            android:layout_alignRight="@+id/corpo"
            android:background="#003366"/>

        <Button
            android:id="@+id/braço_esquerdo"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_toLeftOf="@+id/corpo"
            android:layout_centerVertical="true"
            android:background="#eeddd0"/>
        <Button
            android:id="@+id/braço_direito"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/corpo"
            android:layout_centerVertical="true"
            android:background="#eeddd0"/>
        <Button
            android:id="@+id/gravata"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:layout_marginTop="197dp"
            android:layout_marginLeft="170dp"
            android:background="#725fdf"/>

        <Button
            android:id="@+id/manga_esquerda"
            android:layout_width="40dp"
            android:layout_height="90dp"
            android:layout_marginTop="196dp"
            android:layout_marginLeft="95dp"
            android:background="#000000"/>
        <Button
            android:id="@+id/manga_direita"
            android:layout_width="40dp"
            android:layout_height="90dp"
            android:layout_marginTop="196dp"
            android:layout_marginLeft="225dp"
            android:background="#000000"/>

        <Button
            android:id="@+id/olho"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/cabeça"
            android:layout_alignTop="@+id/cabeça"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background= "#ffffff"/>

        <Button
            android:id="@+id/olho2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/cabeça"
            android:layout_alignTop="@+id/cabeça"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:background= "#ffffff"/>

        <Button
            android:id="@+id/olho3"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/cabeça"
            android:layout_alignTop="@+id/cabeça"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background= "#000000"/>

        <Button
            android:id="@+id/olho4"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/cabeça"
            android:layout_alignTop="@+id/cabeça"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:background= "#000000"/>


        <Button
            android:id="@+id/boca"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/cabeça"
            android:layout_alignTop="@+id/cabeça"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background= "#000000"/>

        <Button
            android:id="@+id/olho4"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignRight="@+id/cabeça"
            android:layout_alignTop="@+id/cabeça"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:background= "#ffffff"/>



    </RelativeLayout>

</LinearLayout>